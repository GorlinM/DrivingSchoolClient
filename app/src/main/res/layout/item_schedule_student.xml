<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/order_student_head_bg"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_schedule_date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="2017-01.07"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/item_schedule_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="09:00-10:00"
            android:layout_gravity="center_vertical"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1
            ">
            <Button
                android:id="@+id/item_schedule_status"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="正常"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@color/item_schedule_btn_normal_color"/>
        </FrameLayout>
    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <TableRow
            >
            <TextView
                android:id="@+id/item_schedule_name"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="项目: 路训"/>
            <TextView
                android:id="@+id/item_schedule_hour"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="课时: 1"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/item_schedule_teacher_name"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="教练: 德玛西亚"/>
            <TextView
                android:id="@+id/item_schedule_car_num"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="车辆: 粤B8888"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/item_schedule_remark"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="备注: 上午"/>
            <TextView
                android:id="@+id/item_schedule_grade"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="评分: 好评"/>
        </TableRow>
    </TableLayout>
</LinearLayout>